{# web/themes/custom/fundacion_acres/templates/page--node--8.html.twig #}
<!DOCTYPE html>
<html lang="{{ language.getId }}">
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes }}>
    <a href="#main-content" class="visually-hidden focusable skip-link">
      {{ 'Saltar al contenido principal'|t }}
    </a>

    {# ----- Header global ----- #}
    <header class="navbar navbar-expand-lg navbar-dark fixed-top custom-navbar">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('<front>') ~ 'home' }}">
          <img src="{{ directory }}/assets/images/logo_acres-01.png" alt="Logo Fundación Acres">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#main-menu" aria-controls="main-menu"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="main-menu">
          <ul class="navbar-nav ms-4 fw-bold">
           {# Dropdown "Qué hacemos" #}
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="{{ path('<front>') ~ 'que-hacemos' }}"
              id="qhDropdown"
              role="button"
              data-bs-toggle="dropdown"
              data-bs-auto-close="outside"
              aria-expanded="false"
            >
              Qué hacemos
            </a>

            <ul class="dropdown-menu shadow-sm" aria-labelledby="qhDropdown">
              <li><a class="dropdown-item" href="{{ path('<front>') ~ 'beca-talentos' }}">Beca talentos para la ingeniería</a></li>

              {# micrositio externo #}
              <li>
              <a class="dropdown-item" href="{{ path('<front>') ~ 'beca-guillermina' }}">
               Beca Guillermina
              </a>
            </li>

            <li><a class="dropdown-item" href="{{ path('<front>') ~ 'obras-labor-social' }}">Obras con labor social</a></li>
          </ul>
        </li>
            <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="{{ path('<front>') ~ 'quienes-somos' }}"
              id="qhDropdown"
              role="button"
              data-bs-toggle="dropdown"
              data-bs-auto-close="outside"
              aria-expanded="false"
            >
              Quienes somos
            </a>

            <ul class="dropdown-menu shadow-sm" aria-labelledby="qhDropdown">
              <li><a class="dropdown-item" href="{{ path('<front>') ~ 'talentos-alumni' }}">Talentos alumni</a></li>
          </ul>
        </li>
            <li class="nav-item"><a class="nav-link" href="{{ path('<front>') ~ 'impacto' }}">Impacto</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('<front>') ~ 'contacto' }}">Contacto</a></li>
          </ul>

          <div class="ms-auto">
            <a class="btn btn-light btn-lg bt-final-btn" href="{{ path('<front>') ~ 'implusa-talento' }}"><strong>Impulsa talento aquí</strong></a>
          </div>
        </div>
      </div>
    </header>

    {# =========================================================
       SECCIÓN 1 – BANNER con imagen de fondo + texto + CTA
       ========================================================= #}
   <section class="bt-hero text-white" style="background-image:url('{{ directory }}/assets/images/8.png');">
      <div class="container">
        <div class="row align-items-end">
          <div class="col-lg-8 bt-hero-content3">
            <h1 class="visually-hidden">Beca talentos para la ingeniería</h1>
            <p class="bt-hero-kicker">Talentos alumni</p>

            <p class="bt-hero-title">
              Talentos que permanecen, una industria que se fortalece.
            </p>

            <a href="{{ path('<front>') ~ 'implusa-talento' }}" class="btn btn-light btn-lg bt-final-btn">
              <strong>Quiero seguir siendo Acres</strong>
            </a>
          </div>
        </div>
      </div>

      {# decoración opcional #}
      <div class="bt-hero-shape"></div>
    </section>


    {# --- SECCIÓN 2: Intro de texto (estilo ONE) --- #}
    <section class="bt-intro">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-10 col-xl-8">

            <h2 class="bt-intro-title">
              <span class="fw-normal">Graduarse no es el final del camino, es el inicio de una nueva etapa de impacto.
              La red alumni ACRES conecta a nuestros egresados con líderes de la industria, creando un círculo virtuoso
              donde la experiencia de hoy impulsa a la próxima generación de talentos de la ingeniería.</span>
            </h2>

          </div>
        </div>
      </div>
    </section>



    <section class="bt-como" style="background-color:#333333;">
      <div class="container">
        <h2 class="bt-test-title2 fw-normal text-center mt-4"style="color:#FECA35;"><strong>¿Por qué ser parte de la red alumni?</strong></h2>

        <div class="row g-4">
          <!-- Tarjeta 1 -->
          <div class="col-12 col-md-6 col-lg-3">
            <article class="como-card">
              <div>
              <img
                src="{{ directory }}/assets/images/icono_13.png"
              >
              </div>
              <span class="bt-intro-title2 fw-normal">
                Conéctate con profesionales y empresas que lideran el sector de la infraestructura y la ingeniería en Colombia.
              </span>
            </article>
          </div>

          <!-- Tarjeta 2 -->
          <div class="col-12 col-md-6 col-lg-3">
            <article class="como-card">
              <div>
              <img
                src="{{ directory }}/assets/images/icono_14.png"
              >
              </div>
            <span class="bt-intro-title2 fw-normal">
              Descubre oportunidades de crecimiento laboral y académico.
            </span>
            </article>
          </div>

          <!-- Tarjeta 3 -->
            <div class="col-12 col-md-6 col-lg-3">
            <article class="como-card">
              <div>
                <img
                  src="{{ directory }}/assets/images/icono_15.png"
                >
              </div>
            <span class="bt-intro-title2 fw-normal">
              Comparte tu experiencia para inspirar y guiar a jóvenes talentos que hoy recorren el mismo camino que tú.
            </span>
          </article>
        </div>

        <!-- Tarjeta 4 -->
          <div class="col-12 col-md-6 col-lg-3">
            <article class="como-card">
              <div>
                <img
                  src="{{ directory }}/assets/images/icono_16.png"
                >
              </div>
              <span class="bt-intro-title2 fw-normal">
                Sé parte de una comunidad que transforma la ingeniería en desarrollo sostenible.
              </span>
            </article>
          </div>
        </div>
      </div>
    </section>

        {# === SECCIÓN 3: Nuestra solución (2 columnas) === #}
    <section class="bt-solucion">
      <div class="container">
        <div class="row align-items-center">

          <!-- Columna TEXTO -->
          <div class="col-12 col-lg-6">
          <h2 class="bt-test-title2"style="color:#333333;"><strong>Un legado compartido</strong></h2>

          <p class="bt-sol-lead">
            Los alumni ACRES no solo potencian sus carreras,
            también multiplican el impacto de la Fundación al aportar su conocimiento,
            abrir puertas y convertirse en modelos de liderazgo.
          </p>

             <a href="{{ path('<front>') ~ 'implusa-talento' }}" class="btn btn-dark btn-lg bt-final-btn">
                <strong>Quiero seguir conectado con ACRES</strong>
              </a>

        </div>

        <!-- Columna ILUSTRACIÓN -->
          <div class="col-12 col-lg-6">
            <div class="bt-sol-illustration text-center">
            <img
              src="{{ directory }}/assets/images/06.png"
              alt="Talentos ingeniería"
              class="bt-sol-img"
            >
            <div class="bt-sol-shape"></div>
            </div>
          </div>

        </div>
      </div>
    </section>

    {# ----- Footer global ----- #}
    {{ page.footer }}

    <footer class="footer bg-dark text-white pt-5 pb-3">
    <div class="container">
      <div class="row">

        <!-- Columna izquierda -->
        <div class="col-md-6 mb-4 mb-md-0">
          <h5 class="fw-bold mb-3">Fundación ACRES</h5>
          <ul class="list-unstyled">
            <li><a href="/quienes-somos" class="footer-link">Quiénes somos</a></li>
            <li><a href="/informacion-legal" class="footer-link">Información legal</a></li>
            <li><a href="/contacto" class="footer-link">Contacto</a></li>
            <li><a href="/politica-privacidad" class="footer-link">Política de privacidad</a></li>
            <li><a href="/tratamiento-datos" class="footer-link">Tratamiento de datos</a></li>
          </ul>
        </div>

        <!-- Columna derecha -->
        <div class="col-md-6">
          <h5 class="fw-bold mb-3">Síguenos en redes</h5>
          <div class="d-flex gap-3">
            <a href="https://facebook.com" target="_blank" class="footer-icon">
              <i class="fab fa-facebook fa-lg"></i>
            </a>
            <a href="https://instagram.com" target="_blank" class="footer-icon">
              <i class="fab fa-instagram fa-lg"></i>
            </a>
            <a href="https://twitter.com" target="_blank" class="footer-icon">
              <i class="fab fa-twitter fa-lg"></i>
            </a>
            <a href="https://linkedin.com" target="_blank" class="footer-icon">
              <i class="fab fa-linkedin fa-lg"></i>
            </a>
          </div>
        </div>

      </div>

      <!-- Línea inferior -->
      <div class="row mt-4">
        <div class="col text-center">
          <small>&copy; {{ "now"|date("Y") }} Fundación ACRES. Todos los derechos reservados.</small>
        </div>
      </div>
    </div>
  </footer>


    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
